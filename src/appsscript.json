{
    "timeZone": "America/Sao_Paulo",
    "dependencies": {},
    "exceptionLogging": "STACKDRIVER",
    "runtimeVersion": "V8",
    "oauthScopes": [
        "https://www.googleapis.com/auth/drive.file",
        "https://www.googleapis.com/auth/workspace.linkpreview",
        "https://www.googleapis.com/auth/script.locale",
        "https://www.googleapis.com/auth/script.external_request",
        "https://www.googleapis.com/auth/script.container.ui",
        "https://www.googleapis.com/auth/spreadsheets.currentonly"
    ],
    "addOns": {
        "common": {
            "name": "STARK BANK",
            "logoUrl": "https://starkbank.com/static/icon.png",
            "useLocaleFromApp": true,
            "layoutProperties": {
                "primaryColor": "#0070E0"
            },
            "homepageTrigger": {
                "runFunction": "onHomepage",
                "enabled": true
            }
        },
        "sheets": {
            "homepageTrigger": {
                "runFunction": "onHomepage",
                "enabled": true
            },
            "onFileScopeGrantedTrigger": {
                "runFunction": "onFileScopeGranted"
            },
            "linkPreviewTriggers": [
                {
                    "labelText": "Invoice",
                    "runFunction": "previewInvoice",
                    "patterns": [
                        {
                            "hostPattern": "starkbank.com",
                            "pathPrefix" : "invoicelink"
                        }
                    ]
                }
            ]
        }
    },
    "urlFetchWhitelist": [
        "https://starkbank.com/",
        "https://api.starkbank.com/",
        "https://sandbox.api.starkbank.com/",
        "https://us-central1-api-ms-auth-sbx.cloudfunctions.net/"
    ]
}